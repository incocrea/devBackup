<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    {% include '_required-css.twig' %}

    <!-- PLUGINS FOR CURRENT PAGE -->
    <link rel="stylesheet" href="../plugins/swiper/swiper.min.css">

    {% include '_template-css.twig' %}

    <title>Cart - {{title}}</title>
  </head>
  <body>

    {% include '_header.twig' %}

    <div class="container-fluid" id="main-container">
      <div class="row">

        {% include '_sidebar.twig' with {'active':'pages','sub':'cart'} %}

        <div class="col" id="main-content">

          <h3 class="title mb-3">You have 4 items in your cart</h3>

          <!-- Shopping Cart Table -->
          <table class="table table-cart">
            <tbody>
              {% for item in cart %}
              <tr>
                <td><button class="btn btn-sm btn-outline-warning rounded-circle" title="Remove"><i class="fa fa-close"></i></button></td>
                <td>
                  <a href="detail.html"><img src="../img/product/{{ item.img }}" width="50" height="50" alt="{{ item.name }}"></a>
                  <button class="btn btn-sm btn-outline-warning rounded">Remove</button>
                </td>
                <td>
                  <h6><a href="detail.html" class="text-body">{{ item.name }}</a></h6>
                  <h6 class="text-muted">{{ item.price }}</h6>
                  {% if item.name == 'NEW Microsoft Surface Go' %}
                  <span class="badge badge-success font-weight-light">RAM: 4GB</span>
                  <span class="badge badge-dark font-weight-light">Storage: 64GB</span>
                  {% endif %}
                </td>
                <td>
                  <div class="input-spinner">
                    <input type="number" class="form-control" value="{{ item.qty }}" min="1" max="999">
                    <div class="btn-group-vertical">
                      <button type="button" class="btn btn-light"><i class="fa fa-chevron-up"></i></button>
                      <button type="button" class="btn btn-light"><i class="fa fa-chevron-down"></i></button>
                    </div>
                  </div>
                  <span class="price">{{ item.price }}</span>
                </td>
              </tr>
              {% endfor %}
              <tr>
                <td colspan="4">
                  <div class="box-total">
                    <h4>Subotal: <span class="price">$1,297.48</span></h4>
                    <a href="checkout.html" class="btn btn-success">CHECKOUT</a>
                  </div>
                </td>
              </tr>

            </tbody>
          </table>
          <!-- /Shopping Cart Table -->

          <!-- Recently viewed-->
          <h4>Recently viewed items</h4>
          {% include '_popular.twig' %}
          <!-- /Recently viewed-->

          {% include '_footer.twig' %}

        </div>
      </div>
    </div>

    {% include '_modal-cart.twig' %}

    {% include '_required-js.twig' %}

    <!-- PLUGINS FOR CURRENT PAGE -->
    <script src="../plugins/swiper/swiper.min.js"></script>

    {% include '_template-js.twig' %}
  </body>
</html>